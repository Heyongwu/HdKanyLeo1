<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textSize="35px"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd9d9"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/guanzhu"/>
    <Button
        android:layout_marginTop="15dp"
        android:text="查看通讯录好友"
        android:textColor="#ffffff"
        android:background="@drawable/shopcart_add_btn"
        android:paddingBottom="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="2dp"
        android:id="@+id/tong"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <Button
        android:layout_marginTop="15dp"
        android:text="你可能感兴趣的人"
        android:textColor="#ff3660"
        android:background="@drawable/shopcart_add_btn02"
        android:paddingBottom="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="2dp"
        android:id="@+id/gan"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

</LinearLayout>